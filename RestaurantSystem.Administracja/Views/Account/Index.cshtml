@model IEnumerable<RestaurantSystem.Administracja.Models.CMS.Account>

@{
    ViewData["Title"] = "Użytkownicy";
}

<h1 class="text-center">Dane uzytkowników</h1>

<h6 class="text-center">Tutaj możesz edytować dane uzytkowników.</h6>


<p>
    <a asp-action="Create" class="btn btn-link text-danger text-gradient px-3 mb-0"><i class="material-icons text-sm me-2">add</i>Nowy uzytkownik</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEmployee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <div class="ms-auto text-end">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link text-danger text-gradient px-3 mb-0"><i class="material-icons text-sm me-2">delete</i>Usuń</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link text-dark px-3 mb-0"><i class="material-icons text-sm me-2">edit</i>Edytuj</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
