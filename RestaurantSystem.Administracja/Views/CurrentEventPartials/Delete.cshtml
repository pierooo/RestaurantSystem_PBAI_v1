            @Html.DisplayNameFor(model => model.PhotoName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventInfo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacebookLink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacebookLink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LinkedinLink)
        </dt>
        <dd class = "col-sm-10">
