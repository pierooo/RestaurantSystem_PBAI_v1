@model IEnumerable<RestaurantSystem.Data.Data.CMS.AboutPartial>;

@if (Model is not null && Model.Any())
{
    <!-- About Start -->
    @foreach (var aboutPartial in Model)
    {
        <div class="container-fluid pt-5">
            <div class="container">
                <div class="row gx-5">
                    <div class="col-lg-5 mb-5 mb-lg-0" style="min-height: 400px;">
                        <div class="position-relative h-100">
                            <img class="position-absolute w-100 h-100" src="~/lib/img/@aboutPartial.PhotoName" style="object-fit: cover;">
                        </div>
                    </div>
                    <div class="col-lg-6 pb-5">
                        <h4 class="mb-4">
                            @aboutPartial.SubTitle
                        </h4>
                        <p class="mb-5">
                            @aboutPartial.Content
                        </p>
                        <div class="row g-5">
                            <div class="col-sm-6">
                                <div class="d-flex align-items-center justify-content-center bg-primary border-inner mb-4" style="width: 90px; height: 90px;">
                                    <i class="fa fa-heartbeat fa-2x text-white"></i>
                                </div>
                                <h4 class="text-uppercase">
                                    @aboutPartial.LeftTitle
                                </h4>
                                <p class="mb-0">
                                    @aboutPartial.LeftContent
                                </p>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-center justify-content-center bg-primary border-inner mb-4" style="width: 90px; height: 90px;">
                                    <i class="fa fa-award fa-2x text-white"></i>
                                </div>
                                <h4 class="text-uppercase">
                                    @aboutPartial.RightTitle
                                </h4>
                                <p class="mb-0">
                                    @aboutPartial.RightContent
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- About End -->
}
