@model IEnumerable<RestaurantSystem.Data.Data.CMS.ContactPartial>;

<!-- Contact Start -->
@foreach (var contactPartial in Model)
{
    <div class="row g-5 mb-5">
        <div class="col-lg-4 col-md-6">
            <div class="bg-primary border-inner text-center text-white p-5">
                <i class="bi bi-geo-alt fs-1 text-white"></i>
                <h6 class="text-uppercase my-2">@contactPartial.CompanyDataTitle</h6>
                <span>@contactPartial.CompanyDataContent</span>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="bg-primary border-inner text-center text-white p-5">
                <i class="bi bi-envelope-open fs-1 text-white"></i>
                <h6 class="text-uppercase my-2">@contactPartial.ContactDataTitle</h6>
                <span>@contactPartial.ContactDataContent</span>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="bg-primary border-inner text-center text-white p-5">
                <i class="bi bi-phone-vibrate fs-1 text-white"></i>
                <h6 class="text-uppercase my-2">@contactPartial.PhoneDataTitle</h6>
                <span>@contactPartial.PhoneDataContent</span>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <input type="text" class="form-control bg-light border-0 px-4" placeholder="@contactPartial.FormName" style="height: 55px;">
                    </div>
                    <div class="col-sm-6">
                        <input type="email" class="form-control bg-light border-0 px-4" placeholder="@contactPartial.FormEmail" style="height: 55px;">
                    </div>
                    <div class="col-sm-12">
                        <input type="text" class="form-control bg-light border-0 px-4" placeholder="@contactPartial.FormTitle" style="height: 55px;">
                    </div>
                    <div class="col-sm-12">
                        <textarea class="form-control bg-light border-0 px-4 py-3" rows="4" placeholder="@contactPartial.FormContent"></textarea>
                    </div>
                    <div class="col-sm-12">
                        <button class="btn btn-primary border-inner w-100 py-3" type="submit">@contactPartial.FormButtonName</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br>
    <br>
}

<!-- Contact End -->
