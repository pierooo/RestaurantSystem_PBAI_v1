@model IEnumerable<RestaurantSystem.Data.Data.CMS.Product>;

@{
    Layout = "~/Views/Shared/_TakeAwayLayout.cshtml";
    var i = 0;
}

<div class="container-fluid about py-5">
    <div class="container">
        <div class="section-title position-relative text-center mx-auto mb-5 pb-3" style="max-width: 600px;">
            <h2 class="text-primary font-secondary">Menu</h2>
        </div>
        <div class="tab-class text-center">
            <div class="tab-content">
                @foreach (var product in @Model)
                {
                    @if (i % 2 == 0)
                    {
                        @Html.Raw("<div class='row g-1'>")
                    }
                    <div class="col-lg-6">
                        <div class="d-flex h-100 product-container">
                            <div class="flex-shrink-0">
                                <img class="img-fluid" src="~/lib/img/@product.PhotoName" alt="" style="width: 150px; height: 85px;">
                                <h4 class="bg-dark text-primary p-2 m-0">@string.Format("{0:F2}", product.UnitPriceGross) zł</h4>
                            </div>
                            <div class="d-flex flex-column justify-content-center text-start bg-secondary border-inner px-4">
                                <h5 class="text-uppercase">@product.Name</h5>
                                <span class="" style="max-width: 200px;">@product.Description</span>
                            </div>
                            <div class="ml-auto button-container">
                                <a href="@Url.Action("Details", "TakeAway", new {id = product.Id})" class="btn btn-primary btn-sm">Szczegóły</a>
                                <a href="#" class="btn btn-success btn-sm">Dodaj do koszyka</a>
                            </div>
                        </div>
                    </div>
                    @if (i % 2 == 1 || i == @Model.Count() - 1)
                    {
                        @Html.Raw("</div>")
                        <br>
                    }
                    i++;
                }
            </div>
        </div>
    </div>
</div>

<style>
    .product-container:hover {
        opacity: 0.7;
    }
</style>